<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" tools:ignore="ResourceName">
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="8dp" />
            <gradient android:angle="360"
                android:endColor="@color/headinglightgreen"
                android:startColor="@color/headinggreen"
                android:type="linear" />
        </shape>
    </item>
    <item>
        <shape>

            <corners android:radius="8dp" />
            <solid android:color="@color/headinggreen" />

        </shape>
    </item>
</selector>